<html>
    
    <div id = "notice">
    <%= flash[:notice] %>
    </div>

    <body>
        <h1>Editing book</h1>
        
            <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
            <div class = "field">
            <%= f.label :title %>
            <%= f.text_field :title %>
            </div>
            <div class = "field">
            <%= f.label :body %>
            <%= f.text_area :body %>
            </div>
            <div class = "field">
            <%= f.submit'Create Book' %>
            <% end %>
            </div>
            <%= link_to("Show", book_path(@book.id), {class: "show_#{@book.id}"}) %>
            |
            <%= link_to("Back", "/books", {class: "back"}) %>
     </body>
</html>

